<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="ch.qos.logback.classic.PatternLayout">
                <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
            </layout>
        </encoder>
    </appender>

    <root>
        <level value="info"/>
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="org.geosdi.geoplatform.connector.CatalogGetRecordsTest" level="debug"/><!-- TODO info -->
    <logger name="org.geosdi.geoplatform.connector.CatalogRequestTest" level="debug"/><!-- TODO info -->
    <logger name="org.geosdi.geoplatform.connector.CatalogGetRecordByIdTest" level="trace"/><!-- TODO info -->

    <logger name="org.geosdi.geoplatform.connector.schema.GPCSWOutputSchemaFinder" level="debug"/>
    <logger name="org.geosdi.geoplatform.connector.jaxb.comparison.CSWContextComparisonTest" level="debug"/>
    <logger name="org.geosdi.geoplatform.connector.server.request.v202.CatalogGetRecordsV202" level="trace"/>
    <logger name="org.geosdi.geoplatform.connector.server.request.v202.filter.TextSearchRequestFilter" level="debug"/>

</configuration>